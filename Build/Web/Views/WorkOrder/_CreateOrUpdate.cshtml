                                @Html.BaseEamLabelFor(model => model.LocationId, required: true)
                                @Html.HiddenFor(model => model.LocationId)
                            </div>
                            <div class="col-md-9">
                                @Html.LocationLookupFor(model => model.LocationName)
                            </div>
                        </div>
                        <div class="form-group">
