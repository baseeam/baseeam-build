                            </div>
                            <div class="col-md-9">
                                @Html.BaseEamEditorFor(model => model.DueDateTime)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.BaseEamLabelFor(model => model.OnSiteDateTime)
                            </div>
                            <div class="col-md-9">
                                @Html.BaseEamEditorFor(model => model.OnSiteDateTime)
                            </div>
