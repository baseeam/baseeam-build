                                @Html.BaseEamLabelFor(model => model.ServiceRequestId)
                                @Html.HiddenFor(model => model.ServiceRequestId)
                            </div>
                            <div class="col-md-9">
                                @Html.ServiceRequestLookupFor(model => model.ServiceRequestNumber)
                            </div>
                        </div>
