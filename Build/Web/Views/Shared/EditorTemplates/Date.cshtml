@model DateTime

@{
    var dataBind = "";
    if (ViewData.ContainsKey("dataBind") && ViewData["dataBind"] != null)
    {
        dataBind = ViewData["dataBind"].ToString();
    }
}

<input id="@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)" name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)" 
       value="@((Model > DateTime.MinValue ? Model : DateTime.Today).ToShortDateString())" 
       data-bind="@dataBind" />
<script>
    $(document).ready(function () {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoDatePicker();
    });
</script>