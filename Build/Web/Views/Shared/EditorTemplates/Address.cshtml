@model AddressModel

<div class="row">
    @Html.HiddenFor(model => model.Id, new { value = Model.Id})
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.Country)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.Country)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.StateProvince)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.StateProvince)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.City)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.City)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.PhoneNumber, required: false)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.PhoneNumber)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.FaxNumber)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.FaxNumber)
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.Address1, required: false)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.Address1)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.Address2)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.Address2)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.ZipPostalCode)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.ZipPostalCode)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.BaseEamLabelFor(model => model.Email, required: false)
            </div>
            <div class="col-md-9">
                @Html.BaseEamEditorFor(model => model.Email)
            </div>
        </div>
    </div>
</div>